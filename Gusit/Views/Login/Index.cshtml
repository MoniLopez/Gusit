@{
    Layout = null;
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.1/dist/css/bootstrap.min.css" rel="stylesheet">
<link href="~/Content/ViewsStyle/LoginStyle.css" rel="stylesheet" />

<body style="background-image: url('../../Content/Images/fondoLogin.png'); background-size: cover; background-repeat: no-repeat;">
    <div class="container pt-5">
        <div class="row">
            <div class="col">
                <div class="card tarjetaPrincipal">
                    <div class="card-body">
                        <div class="col">
                            <img class="mx-auto d-block imgLogin mb-5 mt-5" src="~/Content/Images/logo.png" alt="logoGusit" />
                        </div>
                        <form>
                            <div class="mb-5 mt-3">
                                <input class="formLogin" type="text" name="usuario" required placeholder="Usuario" />
                            </div>
                            <div class="mb-5 mt-5">
                                <input class="formLogin" type="password" name="clave" required placeholder="Contraseña" />
                            </div>
                            <div class="mb-3 mt-3">
                                <input class="mx-auto d-block btnLogin" type="submit" value="Enviar" />
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>

